# Application Service Configuration

# Application
APP_NAME="Photo Platform Application Service"
APP_VERSION="1.0.0"
DEBUG=true

# Database
DATABASE_URL=postgresql+asyncpg://postgres:postgres@localhost:5432/photo_platform

# Redis
REDIS_URL=redis://localhost:6379/0
REDIS_MAX_CONNECTIONS=10

# MinIO (S3-compatible storage)
MINIO_ENDPOINT=localhost:9000
MINIO_ACCESS_KEY=minioadmin
MINIO_SECRET_KEY=minioadmin
MINIO_BUCKET_NAME=photos
MINIO_SECURE=false

# Auth Service (for JWT verification)
AUTH_SERVICE_URL=http://localhost:8001
JWT_SECRET_KEY=your-secret-key-here
JWT_ALGORITHM=HS256

# MongoDB (Audit Logs)
MONGODB_URL=mongodb://admin:admin@localhost:27017

# File Upload
MAX_FILE_SIZE_MB=10
ALLOWED_EXTENSIONS=jpg,jpeg,png,gif,webp

# ML Model
MODEL_PATH=app/ml/models/mobilenet_v2.tflite
LABELS_PATH=app/ml/models/imagenet_labels.txt

# CORS
CORS_ORIGINS=http://localhost:3000,http://localhost:5173
CORS_ALLOW_CREDENTIALS=true
