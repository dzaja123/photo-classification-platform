# Admin Service Configuration

# Application
APP_NAME="Photo Platform Admin Service"
APP_VERSION="1.0.0"
DEBUG=true

# Database
DATABASE_URL=postgresql+asyncpg://postgres:postgres@localhost:5432/photo_platform

# Redis
REDIS_URL=redis://localhost:6379/0
REDIS_MAX_CONNECTIONS=10

# MongoDB (Audit Logs)
MONGODB_URL=mongodb://admin:admin@localhost:27017
MONGODB_DATABASE=photo_platform

# Auth Service (for JWT verification)
AUTH_SERVICE_URL=http://localhost:8001
JWT_SECRET_KEY=your-secret-key-here
JWT_ALGORITHM=HS256

# CORS
CORS_ORIGINS=http://localhost:3000,http://localhost:5173
CORS_ALLOW_CREDENTIALS=true

# Export
EXPORT_MAX_RECORDS=10000
